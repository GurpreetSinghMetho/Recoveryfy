<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:orientation="vertical">

        <include
            android:id="@+id/actionBar"
            layout="@layout/actionbar_layout" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/padding_16"
                tools:context=".auth.AuthenticationActivity">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:src="@drawable/ic_edit_profile"
                    app:layout_constraintBottom_toBottomOf="@id/iv_profile"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_first_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_40"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/first_name"
                    android:textColor="@color/rf_text_gray5"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_basic_info" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_first_name_star"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/star"
                    android:textColor="@color/rf_btn_red"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toEndOf="@id/tv_first_name"
                    app:layout_constraintTop_toTopOf="@id/tv_first_name" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etFirstName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/rounded_corner_background"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/first_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_first_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/last_name"
                    android:textColor="@color/rf_text_gray5"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etFirstName" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etLastName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/rounded_corner_background"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/last_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_last_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/email_id"
                    android:textColor="@color/rf_text_gray5"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etLastName" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etEmailAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/rounded_corner_background"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/email_id"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_email" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_mobile_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/mobile_number"
                    android:textColor="@color/rf_text_gray5"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etEmailAddress" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_mobile_star"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/star"
                    android:textColor="@color/rf_btn_red"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toEndOf="@id/tv_mobile_number"
                    app:layout_constraintTop_toTopOf="@id/tv_mobile_number" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etMobileNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/rounded_corner_background"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/mobile_number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_mobile_number" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_address_line_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/address_line_1"
                    android:textColor="@color/rf_text_gray5"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_address_info" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_address_star"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/star"
                    android:textColor="@color/rf_btn_red"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toEndOf="@id/tv_address_line_1"
                    app:layout_constraintTop_toTopOf="@id/tv_address_line_1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAddressLine1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/rounded_corner_background"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/address_line_1"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_address_line_1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_address_line_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/address_line_2"
                    android:textColor="@color/rf_text_gray5"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etAddressLine1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAddressLine2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/rounded_corner_background"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/address_line_2"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_address_line_2" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/country"
                    android:textColor="@color/rf_text_gray5"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etAddressLine2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_country_star"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/star"
                    android:textColor="@color/rf_btn_red"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toEndOf="@id/tv_country"
                    app:layout_constraintTop_toTopOf="@id/tv_country" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/etCountry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/rounded_corner_background"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:drawablePadding="@dimen/_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/country"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_country" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/state"
                    android:textColor="@color/rf_text_gray5"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etCountry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_state_star"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/star"
                    android:textColor="@color/rf_btn_red"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toEndOf="@id/tv_state"
                    app:layout_constraintTop_toTopOf="@id/tv_state" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/etState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/rounded_corner_background"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:drawablePadding="@dimen/_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/state"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_state" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/city"
                    android:textColor="@color/rf_text_gray5"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etState" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_city_star"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/star"
                    android:textColor="@color/rf_btn_red"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toEndOf="@id/tv_city"
                    app:layout_constraintTop_toTopOf="@id/tv_city" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/etCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/rounded_corner_background"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:drawablePadding="@dimen/_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/city"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_city" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_pincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/pin_code"
                    android:textColor="@color/rf_text_gray5"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etCity" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_pincode_star"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/star"
                    android:textColor="@color/rf_btn_red"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toEndOf="@id/tv_pincode"
                    app:layout_constraintTop_toTopOf="@id/tv_pincode" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPinCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/rounded_corner_background"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/pin_code"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_pincode" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_basic_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_40"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/basic_info"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@color/rf_nav_item_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_basic_info" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_address_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/address_cap"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etMobileNumber" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@color/rf_nav_item_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_address_info" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:backgroundTint="@color/rf_btn_red"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/update_profile"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            app:cornerRadius="@dimen/rounded_corner_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="viewModel"
            type="com.adciasis.recoveryfy.home.EditProfileViewModel" />
    </data>
</layout>